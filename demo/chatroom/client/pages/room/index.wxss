page,
.page {
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
}

.room-list {
  margin: 20rpx;
  font-size: 24rpx;
}

.room-list picker {
  display: inline-block;
  color: red;
}

.room-list button {
  display: inline-block;
  height: 48rpx;
  font-size: 24rpx;
  padding: 0 10rpx;
  margin: 0 10rpx;
  vertical-align: middle;
  line-height: 48rpx;
}

.room {
  position: relative;
  display: block;
  box-sizing: content-box;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.room .name {
  display: block;
  position: relative;
  width: 100%;
  height: 50rpx;
  margin: 20rpx;
  font-size: 24rpx;
}

.uesrname {
  color: red;
}

.message {
  display: block;
  position: relative;
  /* width: 100%; */
  height: 85%;
  margin: 20rpx;
  overflow-y: auto;
}

.message view {
  line-height: 64rpx;
}

.msgForm {
  position: fixed;
  display: flex;
  width: 100%;
  left: 0;
  right: 0;
  bottom: 40rpx;
  align-items: center;
  justify-content: center;
}

.msgForm input {
  display: inline-block;
  width: 500rpx;
  border-radius: 10rpx;
  padding: 15rpx 15rpx;
  background-color: #eee;
}

.msgForm button {
  display: inline-block;
  line-height: 80rpx;
  margin-left: 10rpx;
  width: 150rpx;
}

.new-user,
.exit-user {
  padding: 5rpx;
  text-align: center;
  border-radius: 10rpx;
  font-size: #eee;
}

.new-user {
  font-size: 24rpx;
  /* color: red; */
}

.exit-user {
  font-size: 24rpx;
  /* color: #777; */
}

.chat-message {
  font-size: 24rpx;
}

.chat-message.right {
  text-align: right;
}

.chat-message.right > view {
  background-color: #95ec69;
}

.chat-message image {
  vertical-align: middle;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin: 10rpx;
}
.chat-message > view {
  display: inline-block;
  max-width: 450rpx;
  background-color: #eee;
  padding: 5rpx 20rpx;
  border-radius: 10rpx;
  word-wrap: break-word;
  vertical-align: middle;
}