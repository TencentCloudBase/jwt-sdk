<!--index.wxml-->
<view class="page">
  <view class="join" wx:if="{{userInfo}}">
  <image wx:if="{{userInfo}}" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
  <text>{{welcome}}</text>
  <text>{{goodbye}}</text>
  </view>
  <view class="login" wx:if="{{!userInfo}}">
    <button
      open-type='getUserInfo'
      bindgetuserinfo="login"
    >
      登陆
    </button>
  </view>
</view>
